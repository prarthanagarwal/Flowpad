{
  "name": "flowpad",
  "version": "1.6.0",
  "description": "a minimal notepad for your thoughts to flow",
  "productName": "Flowpad",
  "author": {
    "name": "Prarthan Agarwal",
    "email": "developer@flowpad.com"
  },
  "copyright": "Copyright Â© 2025 Flowpad Developer",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron-forge start",
    "dev": "electronmon .",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "make-win": "electron-forge make --platform=win32 --arch=x64",
    "make-mac": "electron-forge make --platform=darwin --arch=universal",
    "make-portable": "electron-forge make --platform=win32 --arch=x64 --targets=@electron-forge/maker-zip",
    "lint": "echo \"No linting configured yet\"",
    "test": "echo \"No tests configured yet\""
  },
  "keywords": [
    "electron",
    "notes",
    "productivity",
    "writing"
  ],
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-dmg": "^7.8.1",
    "@electron-forge/maker-rpm": "^7.8.1",
    "@electron-forge/maker-squirrel": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
    "@electron-forge/plugin-fuses": "^7.8.1",
    "@electron-forge/publisher-github": "^7.8.1",
    "@electron/fuses": "^1.8.0",
    "cross-env": "^7.0.3",
    "electron": "^36.5.0",
    "electronmon": "^2.0.3"
  },
  "dependencies": {
    "@phosphor-icons/web": "^2.1.2",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2"
  }
}
